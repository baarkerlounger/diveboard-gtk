<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="DiveTrip" parent="GtkBox">
    <property name="can-focus">0</property>
    <property name="margin-start">5</property>
    <property name="margin-bottom">10</property>
    <property name="orientation">vertical</property>
    <child>
      <object class="GtkBox">
        <property name="can-focus">0</property>
        <child>
          <object class="GtkLabel" id="trip_name">
            <property name="name">trip_name</property>
            <property name="can-focus">0</property>
            <property name="margin-start">2</property>
            <property name="margin-end">5</property>
            <property name="label" translatable="yes">Bali</property>
            <style>
              <class name="bold_header"/>
            </style>
          </object>
        </child>
        <child>
          <object class="GtkLabel" id="dive_count">
            <property name="can-focus">0</property>
            <property name="label" translatable="yes">(2 dives)</property>
            <style>
              <class name="small_text"/>
            </style>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="GtkListBox" id="dive_list">
        <property name="can-focus">0</property>
        <property name="vexpand">1</property>
      </object>
    </child>
  </template>
</interface>

